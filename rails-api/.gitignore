.ruby-version
.ruby-gemset

# Ignore test files
/test/tmp/
/test/version_tmp/

# Ignore Spring files
/spring/*.pid

# Ignore byebug command history file
.byebug_history

# Ignore encrypted secrets key file
config/secrets.yml.key

